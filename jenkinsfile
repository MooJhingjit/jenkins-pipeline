pipeline{
    agent any
    stages{
        stage('Git clone') {
            steps{
                git branch: 'main', url: 'https://github.com/MooJhingjit/jenkins-pipeline.git'
            }
        }
        stage('Create Image') {
            steps{
                sh 'docker build -t pipeline-app .'
            }
        }
        stage('Build') {
            steps{
                sh 'docker rm pipeline-app-build'
                sh 'docker run  --name pipeline-app-build pipeline-app'
            }
        }
         stage('Deploy') {
            steps{
                sh 'echo Deploy Done!'
            }
        }
      
    }
   
}
