pipeline{
    agent any
    stages{
        stage('Git clone') {
            steps{
                git branch: 'main', url: 'https://github.com/MooJhingjit/SampleProject.git'
            }
        }
        stage('Create Image') {
            steps{
                sh 'docker build -t pipeline-app .'
            }
        }
        stage('Build') {
            steps{
                sh 'docker run -it --name pipeline-app-build pipeline-app'
            }
        }
      
    }
   
}